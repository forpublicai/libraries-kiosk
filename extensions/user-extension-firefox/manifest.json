{
  "manifest_version": 2,
  "name": "PublicPass User (Firefox)",
  "description": "Receive and accept sessions; request access when needed.",
  "version": "1.0.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "publicpass-user@example.com",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "<all_urls>",
    "cookies",
    "storage",
    "tabs",
    "notifications",
    "webNavigation",
    "alarms"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["banner.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
